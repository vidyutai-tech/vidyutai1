{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "services": [
    {
      "name": "backend",
      "source": {
        "image": "vidyutai-backend"
      },
      "variables": {
        "PORT": "3000",
        "NODE_ENV": "production"
      }
    },
    {
      "name": "ai-service",
      "source": {
        "image": "vidyutai-ai-service"
      },
      "variables": {
        "PORT": "8000"
      }
    },
    {
      "name": "frontend",
      "source": {
        "image": "vidyutai-frontend"
      }
    }
  ]
}

